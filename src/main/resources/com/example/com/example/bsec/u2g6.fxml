<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="462.0" prefWidth="683.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bsec.u2g6">

    <children>
        <Label layoutX="220" layoutY="20" text="Executed Trades Summary">
            <font><Font size="22" /></font>
        </Label>

        <TableView fx:id="executedTradesTable" layoutX="50" layoutY="70" prefHeight="300" prefWidth="600">
            <columns>
                <TableColumn fx:id="tableidCol" prefWidth="100" text="Trade ID" />
                <TableColumn fx:id="stockcodeCol" prefWidth="100" text="Stock Code" />
                <TableColumn fx:id="quantityCol" prefWidth="100" text="Quantity" />
                <TableColumn fx:id="priceCol" prefWidth="150" text="Price" />
                <TableColumn fx:id="dateCol" prefWidth="150" text="Date" />
            </columns>
        </TableView>

        <Button fx:id="btnViewDetails" layoutX="200" layoutY="390" onAction="#viewDetailsAction" text="View Details" />
        <Button fx:id="btnBack" layoutX="350" layoutY="390" onAction="#backDashboardAction" text="Back" />

        <Label fx:id="lblMessage" layoutX="200" layoutY="430" textFill="green" visible="false" />
    </children>

</AnchorPane>
