<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bsec.u2g4">

    <children>
        <Label layoutX="240" layoutY="20" text="Commission Report">
            <font><Font size="22" /></font>
        </Label>

        <Label layoutX="50" layoutY="70" text="Select Date Range:" />
        <ComboBox fx:id="comboDateRange" layoutX="180" layoutY="65" prefWidth="150" />
        <Button fx:id="btnGenerate" layoutX="350" layoutY="65" onAction="#generateReportAction" text="Generate Report" />

        <TableView fx:id="commissionTable" layoutX="25.0" layoutY="103.0" prefHeight="280" prefWidth="550">
            <columns>
                <TableColumn fx:id="clientboidCol" prefWidth="150" text="Client BO ID" />
                <TableColumn fx:id="tradevalueCol" prefWidth="200" text="Trade Value" />
                <TableColumn fx:id="commissionearnedCol" prefWidth="200" text="Commission Earned" />
            </columns>
        </TableView>

        <Button layoutX="250" layoutY="410" onAction="#exportPDFAction" text="Export as PDF" />

        <Label fx:id="lblMessage" layoutX="200" layoutY="440" textFill="green" visible="false" />
      <Button layoutX="377.0" layoutY="410.0" mnemonicParsing="false" onAction="#backButtonAction" text="back" />
    </children>

</AnchorPane>
