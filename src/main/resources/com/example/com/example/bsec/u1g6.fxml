<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="498.0" prefWidth="688.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bsec.u1g6">

    <children>
        <Label layoutX="250" layoutY="20" text="Transaction History">
            <font><Font size="22" /></font>
        </Label>

        <Label layoutX="50" layoutY="70" text="From Date:" />
        <DatePicker fx:id="fromDatePicker" layoutX="130" layoutY="65" />

        <Label layoutX="350.0" layoutY="71.0" text="To Date:" />
        <DatePicker fx:id="toDatePicker" layoutX="410.0" layoutY="66.0" />

        <Label layoutX="50" layoutY="110" text="Select Stock:" />
        <ComboBox fx:id="stockFilterCombo" layoutX="150" layoutY="105" prefWidth="200" />

        <TableView fx:id="transactionTable" layoutX="50" layoutY="150" prefHeight="280" prefWidth="600">
            <columns>
                <TableColumn fx:id="dateCol" prefWidth="100" text="Date" />
                <TableColumn fx:id="stockCol" prefWidth="120" text="Stock" />
                <TableColumn fx:id="typeCol" prefWidth="100" text="Type" />
                <TableColumn fx:id="quantityCol" prefWidth="100" text="Quantity" />
                <TableColumn fx:id="priceCol" prefWidth="180" text="Price" />
            </columns>
        </TableView>

        <Button layoutX="270" layoutY="450" onAction="#exportPDFAction" text="Export as PDF" />

        <Label fx:id="lblMessage" layoutX="200" layoutY="470" textFill="green" visible="false" />
      <Button layoutX="402.0" layoutY="451.0" mnemonicParsing="false" onAction="#backButtonAction" text="back" />
    </children>
</AnchorPane>
