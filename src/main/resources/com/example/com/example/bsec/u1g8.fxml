<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bsec.u1g8">

    <children>
    <Label layoutX="230" layoutY="20" text="Quick Report">
        <font><Font size="22" /></font>
    </Label>

    <Label layoutX="50" layoutY="80" text="Company Name:" />
    <TextField fx:id="txtCompanyName" layoutX="180" layoutY="75" prefWidth="250" />

    <Label layoutX="50" layoutY="120" text="Year:" />
    <TextField fx:id="txtYear" layoutX="180" layoutY="115" prefWidth="100" />

    <Label layoutX="50" layoutY="160" text="Attach Report File:" />
    <TextField fx:id="txtFilePath" editable="false" layoutX="180" layoutY="155" prefWidth="200" />
    <Button fx:id="btnBrowseFile" layoutX="390" layoutY="155" onAction="#browseFileAction" text="Browse" />

    <Button fx:id="btnSubmitReport" layoutX="180" layoutY="210" onAction="#submitReportAction" text="Submit Report" />

    <Label fx:id="lblMessage" layoutX="180" layoutY="250" textFill="green" visible="false" />
      <Button layoutX="203.0" layoutY="255.0" mnemonicParsing="false" onAction="#backButtonAction" text="back" />
</children>

</AnchorPane>
