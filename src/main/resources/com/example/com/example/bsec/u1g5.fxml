<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="447.0" prefWidth="637.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bsec.u1g5">

    <children>
        <Label layoutX="250" layoutY="20" text="My Portfolio">
            <font><Font size="22" /></font>
        </Label>

        <TableView fx:id="portfolioTable" layoutX="50" layoutY="70" prefHeight="300" prefWidth="550">
            <columns>
                <TableColumn fx:id="stocknameCol" prefWidth="120" text="Stock Name" />
                <TableColumn fx:id="quantityCol" prefWidth="80" text="Quantity" />
                <TableColumn fx:id="avgpriceCol" prefWidth="100" text="Avg Price" />
                <TableColumn fx:id="currentpriceCol" prefWidth="100" text="Current Price" />
                <TableColumn fx:id="profitorlossCol" prefWidth="150" text="Profit/Loss" />
            </columns>
        </TableView>

        <Button layoutX="230" layoutY="390" onAction="#exportReportAction" text="Export Portfolio Report" />

        <Label fx:id="lblMessage" layoutX="200" layoutY="420" textFill="green" visible="false" />
      <Button layoutX="538.0" layoutY="390.0" mnemonicParsing="false" onAction="#backButtonAction" text="Back" />
    </children>
</AnchorPane>
