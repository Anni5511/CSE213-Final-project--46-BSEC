<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="433.0" prefWidth="637.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bsec.u2g8">

    <children>
        <!-- Title -->
        <Label layoutX="250" layoutY="20" text="Search Client">
            <font><Font size="22" /></font>
        </Label>

        <!-- Search input -->
        <Label layoutX="50" layoutY="70" text="Enter Client Name or BO ID:" />
        <TextField fx:id="txtSearch" layoutX="250" layoutY="65" prefWidth="250" />

        <Button fx:id="btnSearch" layoutX="510" layoutY="65" onAction="#searchClientAction" text="Search" />

        <!-- Table for results -->
        <TableView fx:id="searchResultsTable" layoutX="50" layoutY="110" prefHeight="280" prefWidth="550">
            <columns>
                <TableColumn fx:id="nameCol" prefWidth="150" text="Name" />
                <TableColumn fx:id="boidCol" prefWidth="100" text="BO ID" />
                <TableColumn fx:id="emailCol" prefWidth="200" text="Email" />
                <TableColumn fx:id="statusCol" prefWidth="100" text="Status" />
            </columns>
        </TableView>

        <!-- Back button -->
        <Button fx:id="btnBack" layoutX="250" layoutY="400" onAction="#backDashboardAction" text="Back to Dashboard" />

        <!-- Message label -->
        <Label fx:id="lblMessage" layoutX="200" layoutY="390" visible="false" />
    </children>
</AnchorPane>
