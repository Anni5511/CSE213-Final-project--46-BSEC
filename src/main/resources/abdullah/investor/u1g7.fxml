<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="abdullah.investor.u1g7">

    <children>
        <Label layoutX="230" layoutY="20" text="My Watchlist">
            <font><Font size="22" /></font>
        </Label>

        <TableView fx:id="watchlistTable" layoutX="50" layoutY="70" prefHeight="250" prefWidth="500">
            <columns>
                <TableColumn fx:id="stocksymbolCol" prefWidth="200" text="Stock Symbol" />
                <TableColumn fx:id="latestpriceCol" prefWidth="200" text="Latest Price" />
                <TableColumn fx:id="removeCol" prefWidth="100" text="Remove" />
            </columns>
        </TableView>

        <Label layoutX="50" layoutY="340" text="Add Stock:" />
        <TextField fx:id="txtAddStock" layoutX="130" layoutY="335" prefWidth="150" />
        <Button layoutX="300" layoutY="335" onAction="#addStockAction" text="Add" />

        <Button layoutX="220" layoutY="380" onAction="#backDashboardAction" text="BACK TO DASHBOARD" />

        <Label fx:id="lblMessage" layoutX="150" layoutY="420" textFill="green" visible="false" />
    </children>

</AnchorPane>
