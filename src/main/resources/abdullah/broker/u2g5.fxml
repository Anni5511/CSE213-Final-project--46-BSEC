<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="488.0" prefWidth="632.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="abdullah.Broker.u2g5">

    <children>
        <Label layoutX="220" layoutY="20" text="Client Account Requests">
            <font><Font size="22" /></font>
        </Label>

        <TableView fx:id="clientRequestsTable" layoutX="13.0" layoutY="74.0" prefHeight="300" prefWidth="600">
            <columns>
                <TableColumn fx:id="clientnameCol" prefWidth="150" text="Client Name" />
                <TableColumn fx:id="boidCol" prefWidth="150" text="BO ID" />
                <TableColumn fx:id="documentsCol" prefWidth="200" text="Documents" />
                <TableColumn fx:id="statusCol" prefWidth="100" text="Status" />
            </columns>
        </TableView>

        <Button fx:id="btnViewDetails" layoutX="150" layoutY="390" onAction="#viewDetailsAction" text="View Details" />
        <Button fx:id="btnApprove" layoutX="270" layoutY="390" onAction="#approveAction" text="Approve" />
        <Button fx:id="btnReject" layoutX="370" layoutY="390" onAction="#rejectAction" text="Reject" />

        <TextField fx:id="txtRejectReason" layoutX="150" layoutY="430" prefWidth="300" promptText="Enter rejection reason (if any)" />

        <Button layoutX="470" layoutY="430" onAction="#backDashboardAction" text="BACK" />

        <Label fx:id="lblMessage" layoutX="200" layoutY="470" textFill="green" visible="false" />
    </children>

</AnchorPane>
