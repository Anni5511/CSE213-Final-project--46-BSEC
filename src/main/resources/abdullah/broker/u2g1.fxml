<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="418.0" prefWidth="670.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="abdullah.Broker.u2g1">

    <children>
        <Label layoutX="220" layoutY="20" text="Pending Investor Accounts">
            <font><Font size="22" /></font>
        </Label>

        <TableView fx:id="pendingAccountsTable" layoutX="50" layoutY="70" prefHeight="250" prefWidth="600">
            <columns>
                <TableColumn fx:id="investornameCol" prefWidth="150" text="Investor Name" />
                <TableColumn fx:id="nidnumberCol" prefWidth="150" text="NID Number" />
                <TableColumn fx:id="emailCol" prefWidth="200" text="Email" />
                <TableColumn fx:id="statusCol" prefWidth="100" text="Status" />
            </columns>
        </TableView>

        <Button layoutX="150" layoutY="340" onAction="#viewDetailsAction" text="View Details" />
        <Button layoutX="270" layoutY="340" onAction="#approveAction" text="Approve" />
        <Button layoutX="370" layoutY="340" onAction="#rejectAction" text="Reject" />
        <Button layoutX="480" layoutY="340" onAction="#backDashboardAction" text="Back to Dashboard" />

        <Label fx:id="lblMessage" layoutX="200" layoutY="400" textFill="green" visible="false" />
    </children>
</AnchorPane>
