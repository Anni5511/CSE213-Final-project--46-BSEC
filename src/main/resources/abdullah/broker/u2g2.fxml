<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="464.0" prefWidth="750.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="abdullah.Broker.u2g2">

    <children>
        <Label layoutX="260" layoutY="20" text="Pending Trade Orders">
            <font><Font size="22" /></font>
        </Label>

        <TableView fx:id="pendingOrdersTable" layoutX="50" layoutY="70" prefHeight="300" prefWidth="650">
            <columns>
                <TableColumn fx:id="orderidCol" prefWidth="80" text="Order ID" />
                <TableColumn fx:id="investornameCol" prefWidth="150" text="Investor Name" />
                <TableColumn fx:id="stockCol" prefWidth="100" text="Stock" />
                <TableColumn fx:id="typeCol" prefWidth="80" text="Type" />
                <TableColumn fx:id="quantityCol" prefWidth="120" text="Quantity" />
                <TableColumn fx:id="priceCol" prefWidth="120" text="Price" />
            </columns>
        </TableView>

        <Button layoutX="260" layoutY="390" onAction="#executeTradeAction" text="Execute Trade" />
        <Button layoutX="380" layoutY="390" onAction="#backDashboardAction" text="Back to Dashboard" />

        <Label fx:id="lblMessage" layoutX="200" layoutY="440" textFill="green" visible="false" />
    </children>
</AnchorPane>
